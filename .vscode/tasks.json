{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Client",
            "type": "shell",
            "command": "npm run dev",
            "options": {
                "cwd": "${workspaceFolder}/client"
            }
        },
        {
            "label": "Start Server",
            "type": "shell",
            "command": "dotnet run",
            "options": {
                "cwd": "${workspaceFolder}/server/src"
            }
        },
        {
            "label": "Start All",
            "dependsOn": ["Start Client", "Start Server"],
            "dependsOrder": "parallel"
        },
        {
            "label": "Test Client",
            "type": "shell",
            "command": "npm run test",
            "options": {
                "cwd": "${workspaceFolder}/client"
            }
        },
        {
            "label": "Test Server",
            "type": "shell",
            "command": "dotnet test",
            "options": {
                "cwd": "${workspaceFolder}/server/src"
            }
        },
        {
            "label": "Test All",
            "dependsOn": ["Test Client", "Test Server"],
            "dependsOrder": "parallel"
        }
    ]
}