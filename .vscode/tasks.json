{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Vite",
            "type": "shell",
            "command": "npm run dev",
            "options": {
                "cwd": "${workspaceFolder}/client"
            }
        },
        {
            "label": "Start ASP.Net API",
            "type": "shell",
            "command": "dotnet run",
            "options": {
                "cwd": "${workspaceFolder}/server/src"
            }
        },
        {
            "label": "Start All",
            "dependsOn": ["Start Vite", "Start ASP.Net API"],
            "dependsOrder": "parallel"
        }
    ]
}